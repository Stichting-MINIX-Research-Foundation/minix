#!/bin/sh
# Contributed by Brian Murrell
 
state=$1
 
set `who -r`
case $state in
 
'start')
	if [ $9 = "2" -o $9 = "3" ]
	then
		exit
	fi
	if [ -f @PREFIX@/sbin/dhcpd ]; then
		echo "Starting the ISC DHCP server"
		@PREFIX@/sbin/dhcpd
	fi
	;;
'stop')
	if [ -f @PREFIX@/etc/dhcpd.pid ]; then
		PID=`cat @PREFIX@/etc/dhcpd.pid`
		if [ -d /proc/$PID ]; then
			echo "Stopping the ISC DHCP server"
			kill $PID
		fi
	fi
	;;
esac
