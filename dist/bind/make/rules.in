CFLAGS =	@CFLAGS@
LDFLAGS =	@LDFLAGS@
STD_CINCLUDES =	@STD_CINCLUDES@
STD_CDEFINES =	@STD_CDEFINES@
STD_CWARNINGS =	@STD_CWARNINGS@

BUILD_CC = @BUILD_CC@
BUILD_CFLAGS = @BUILD_CFLAGS@
BUILD_CPPFLAGS = @BUILD_CPPFLAGS@
BUILD_LDFLAGS = @BUILD_LDFLAGS@
