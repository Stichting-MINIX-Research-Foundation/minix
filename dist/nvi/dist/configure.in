		AC_CHECK_LIB(termcap, tgetent,
			[vi_cv_termlib=-ltermcap], [vi_cv_termlib=no])
	fi
fi
if test "$vi_cv_termlib" != no; then
	CURSLIBS="$CURSLIBS $vi_cv_termlib"
fi

	LIBS="$SAVELIBS"
	LDFLAGS="$SAVELDFLAGS"
	CPPFLAGS="$SAVECPPFLAGS"
