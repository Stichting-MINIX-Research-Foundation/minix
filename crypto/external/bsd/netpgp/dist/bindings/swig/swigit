# rushed script to call swig and compile the output
# Usage: swigit <lang> <module>

prefix=$(pkg_info -qp swig | awk '{ print $2 }')

lang=$1
module=$2

case "$lang" in
"")
	echo "You need to specify an interpreted language like perl or tcl"
	exit 1
	;;
perl)
	dir=$(pkg_info -qL perl | awk '/EXTERN.h/ { gsub("/EXTERN.h$", ""); print }')
	cstrings1='#undef SvPOK'
	cstrings2='#define SvPOK(x) 1'
	incpath='CPPFLAGS+=-I'"$dir"
	;;
python)
	swigflags="-shadow"
	dir=$(pkg_info -qL 'python*' | awk '/Python.h/ { gsub("/Python.h$", ""); print }')
	incpath='CPPFLAGS+=-I'"$dir"
	;;
esac

case "$module" in
"")
	echo "You need to specify a module"
	exit 1
	;;
esac

cat << EOF > ${module}${lang}.i
%module ${module}${lang}
%{
#include <${module}.h>
${cstrings1}
${cstrings2}
%}
%include ${module}.h
EOF

cp ../../include/${module}.h .

swig ${swigflags} -${lang} ${module}${lang}.i

cat << EOF > Makefile
# \$NetBSD\$
# Automatically generated by swigit wrapper script

PREFIX=${prefix}

LIB=${module}${lang}
SRCS=${module}${lang}_wrap.c
WARNS=0
MKMAN=no
CPPFLAGS+=-I\${PREFIX}/include
${incpath}
LDFLAGS+=-L\${PREFIX}/lib
LDADD+=-l${module}

.include <bsd.lib.mk>
EOF

cat << EOF > shlib_version
major=0
minor=0
EOF

env USETOOLS=no make

case "${lang}" in
python)
	ln -s lib${module}${lang}.so _${module}${lang}.so
	;;
esac
