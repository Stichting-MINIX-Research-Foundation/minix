/* Id: dnssec.2,v 1.5 2011/11/07 00:14:11 marka Exp  */

options {
        dnssec-enable no;
};

view view1 {
        match-clients { any; };
        dnssec-validation yes;
};

view view2 {
        match-clients { none; };
        dnssec-validation auto;
};

view view3 {
        match-clients { none; };
        auto-dnssec maintain;
};
