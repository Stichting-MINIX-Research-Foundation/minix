CPPFLAGS+=	-DHAVE_INTTYPES_H=1
CPPFLAGS+=	-DHAVE_STDINT_H=1
CPPFLAGS+=	-DHAVE_UNISTD_H=1
CPPFLAGS+=	-DHAVE_BITSTRING_H=1
CPPFLAGS+=	-DHAVE_CURSES_H=1
CPPFLAGS+=	-DHAVE_DIRENT_H=1
CPPFLAGS+=	-DHAVE_FCNTL_H=1
