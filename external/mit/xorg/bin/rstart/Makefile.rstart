.include <bsd.own.mk>

.PATH:		${X11SRCDIR.rstart}/${CFDIR}
FILESDIR=	${X11ETCDIR}/rstart/${CFDIR}

.for _F in ${CFFILES}
${_F}.sed: ${_F}
	${_MKTARGET_CREATE}
	rm -f ${.TARGET}
	${TOOL_SED} ${CFSED} < ${.ALLSRC} > ${.TARGET}

CONFIGFILES+=		${_F}.sed
CLEANFILES+=		${_F}.sed
FILESNAME_${_F}.sed=	${_F}
.endfor

TARGETS+=	configinstall

realall: ${CONFIGFILES}
